# Bybit API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# TimescaleDB Configuration
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_DB=arbitrage_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:postgres123@timescaledb/airflow
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth,airflow.api.auth.backend.session

# Monitored Coins
COINS=BTC,ETH,BNB,SOL,TRX,DOGE,ADA

# Exchange Fees (in percentage)
BYBIT_FEE=0.1
BINANCE_FEE=0.1
KUCOIN_FEE=0.1

# Arbitrage Alert Threshold (minimum profit percentage to trigger notification)
MIN_PROFIT_THRESHOLD=0.5

# Scraping Interval (in seconds)
SCRAPE_INTERVAL=60

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false
